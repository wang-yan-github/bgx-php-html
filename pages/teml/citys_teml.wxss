.input {
  width: 100%;
}

.input input {
  background-color: #fff;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx 0;
}

.citypickers {
  position: fixed;
  height: 100%;
  width: 100%;
  min-height: 100%;
  background-color: #ff0;
}

.citybody {
  position: fixed;
  bottom: 0px;
  left: 0;
  background-color: #fff;
  z-index: 10;
}

.cityheader {
  position: absolute;
  top: 0px;
  width: 100%;
  z-index: 5;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #828282;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #10ff10;
}

.section .picker {
  background-color: #fff;
  border-bottom: 2px #ccc solid;
  border-top: 2px #d9d9d9 solid;
  padding: 20rpx;
}

.quyu {
  border-top: 1px #eee solid;
  height: 90rpx;
  background-color: #fff;
  line-height: 90rpx;
}
