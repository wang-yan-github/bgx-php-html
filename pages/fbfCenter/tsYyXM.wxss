.item {
  height: 120rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
  padding: 30rpx;
  position: relative;
}

.new{
  color: red;
}

.item_name {
  font-size: 34rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
}

.item_time {
  font-size: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #666;
  float: left;
}

.item_time icon {
  margin-right: 20rpx;
  position: relative;
  top: 5rpx;
}

.item_status {
  font-size: 32rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: green;
  float: right;
}

.item_oprator {
  position: absolute;
  height: 177rpx;
  top: 0;
  left: 0;
  /* background-color: #eee;  */
  opacity: 0.8;
  overflow: auto;
}

.item_oprator_item {
  position: relative;
  top: 15rpx;
  height: 140rpx;
  width: 140rpx;
  border-radius: 140rpx;
  text-align: center;
  line-height: 140rpx;
  float: right;
  color: #fff;
  margin-right: 10rpx;
}

.item_oprator_item:nth-child(1) {
  background-color: red;
}

.item_oprator_item:nth-child(2) {
  background-color: orange;
}

.item_oprator_item:nth-child(3) {
  background-color: green;
}

.item_oprator_item:nth-child(4) {
  background-color: blue;
}

.item_oprator_item:nth-child(5) {
  background-color: #666;
}

.notdata {
  padding: 30rpx;
  font-size: 30rpx;
}
