  color: #1c4587;
}

.content_text {
  position: relative;
}

.info_item_r .zhankai {
  max-height: none;
  height: auto;
}

.info_item_r .time {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #666;
  margin-top: 40rpx;
}

.info_item_r .oprator {
  height: 60rpx;
  line-height: 60rpx;
  padding-right: 30rpx;
}

.oprator_item {
  font-size: 26rpx;
  color: #666;
  padding-right: 20rpx;
  float: right;
}

.oprator_item image {
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
  position: relative;
  top: -2rpx;
  margin-right: 10rpx;
}

.oprator_item button {
  font-size: 26rpx;
  outline: none;
  border: 0;
  padding: 10rpx 5rpx;
  background-color: #fff;
  display: inline;
  color: #666;
  position: relative;
  top: -1rpx;
}

.weui-grids {
  margin: 20rpx 0;
  padding-right: 30rpx;
  border: none;
}

.weui-grid {
  border: none;
  padding: 6rpx;
}

.images_ {
  width: 180rpx;
  height: 180rpx;
}

.pinglun1 {
  height: 0;
  overflow: hidden;
}

.pinglun {
  height: auto;
  background-color: #eee;
  margin-right: 30rpx;
  position: relative;
  font-size: 28rpx;
  padding: 20rpx;
  line-height: 40rpx;
}

.pinglun::before {
  content: '';
  display: block;
  position: absolute;
  top: -15rpx;
  left: 0;
  width: 0;
  height: 0;
  border-left: 15px solid transparent;
  border-right: 15px solid transparent;
  border-bottom: 15px solid #eee;
}

.pinglun .name {
  color: #1c4587;
  font-size: 28rpx;
  line-height: 40rpx;
}

.pinglun .content {
  font-size: 26rpx;
  line-height: 40rpx;
}

