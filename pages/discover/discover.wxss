  padding-right: 20rpx;
}

.elliptical {
  position: absolute;
  width: 85rpx;
  height: 40rpx;
  font-size: 30rpx;
  color: #1c4587;
  text-align: center;
  background-color: #fff;
  bottom: 0;
  right: 20rpx;
}

.elliptical1 {
  display: inline-block;
  height: 0;
  overflow: hidden;
}

.zhankan {
  position: absolute;
  width: 90rpx;
