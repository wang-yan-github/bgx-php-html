  background-color: #eee;
}

.weui-cell__hd {
  position: relative;
  margin-right: 10px;
}

.weui-cell__hd image {
  width: 50px;
  height: 50px;
  display: block;
}

.describe {
  font-size: 26rpx;
  color: #888;
}

.info_item {
  overflow: hidden;
  background-color: #fff;
  border-bottom: 1rpx solid #ddd;
  position: relative;
}

.close {
  position: absolute;
  right: 30rpx;
  top: 10rpx;
  width: 30rpx;
  height: 30rpx;
}

.close image {
  width: 30rpx;
  height: 30rpx;
}

.info_item_l {
  float: left;
  width: 20%;
}

.info_item_l image {
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: 0 auto;
  margin-top: 20rpx;
  border: 1rpx solid #eee;
  background-color: #eee;
  border-radius: 10rpx;
}

.info_item_r {
  float: left;
  width: 80%;
  background-color: #fff;
}

.info_item_r .name {
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #1c4587;
}

.info_item_r .content {
  font-size: 28rpx;
  max-height: 120rpx;
  line-height: 40rpx;
  overflow: hidden;
