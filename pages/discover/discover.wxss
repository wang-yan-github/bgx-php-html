}

.more {
  width: 30%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: black;
  opacity: 0.9;
  z-index: 2;
}

.more1 {
  width: 70%;
  height: 100%;
  position: fixed;
  top: 0;
  right: 0;
