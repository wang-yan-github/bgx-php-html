/* pages/xiaoxi/pageXiaoxi.wxss */

.faceInfo {
  width: 100%;
  height: 562rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
}

.fasong_l {
  float: left;
  width: 80%;
  position: relative;
}

.face {
  height: 60rpx;
  width: 60rpx;
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  border-radius: 10rpx;
}

.fasong_r {
  float: left;
  width: 20%;
}

.weui-footer_fixed-bottom {
  padding: 20rpx;
  background-color: #fff;
  z-index: 2;
  bottom: 0;
}

.dark {
  background-color: #666;
  color: #fff;
  line-height: 80rpx;
  font-size: 32rpx;
  border: 1rpx solid #ccc;
}

.dark:focus {
  background-color: #666;
  color: #fff;
}

.shuru_text {
  height: 80rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  margin-right: 20rpx;
  background-color: #fff;
  text-align: left;
  padding-left: 80rpx;
}

.content {
  overflow: hidden;
  width: 100%;
  padding: 20rpx 0;
}

.content_l {
  width: 20%;
  height: 100rpx;
  float: left;
}

.content_l image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
  border: 1rpx solid #ccc;
  background-color: #eee;
  border-radius: 10rpx;
}

.content_r {
  width: 80%;
  float: left;
}

.text {
  font-size: 30rpx;
  display: inline-block;
  background-color: orangered;
  padding: 10rpx 20rpx;
  margin-top: 15rpx;
  position: relative;
  color: #fff;
  margin-right: 120rpx;
  border-radius: 10rpx;
  min-height: 50rpx;
  line-height: 50rpx;
}

.text::before {
  content: "";
  position: absolute;
  left: -15px;
  top: 8px;
  width: 0;
  height: 0;
  border: 8px solid orangered;
  border-top-color: transparent;
  border-left-color: transparent;
  border-bottom-color: transparent;
}

.content1 {
  overflow: hidden;
  width: 100%;
  padding: 20rpx 0;
}

.content1_l {
  width: 80%;
  float: left;
  position: relative;
}

.text1 {
  float: right;
  min-height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  display: inline-block;
  background-color: greenyellow;
  padding: 10rpx 30rpx;
  margin-top: 15rpx;
  position: relative;
  color: #444;
  margin-left: 120rpx;
  border-radius: 10rpx;
}

.text1::before {
  content: "";
  position: absolute;
  right: -30rpx;
  top: 8px;
  width: 0;
  height: 0;
  border: 8px solid greenyellow;
  border-top-color: transparent;
  border-right-color: transparent;
  border-bottom-color: transparent;
}

.content1_r image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 10rpx;
  margin-left: 40rpx;
  border: 1rpx solid #ccc;
  background-color: #eee;
  border-radius: 10rpx;
}

.content1_r {
  width: 20%;
  height: 100rpx;
  float: left;
}

.wechat-emoji {
  width: 10%;
  height: 70rpx;
  float: left;
}

.wechat-emoji_ {
  /* border-left: 1rpx solid #fff; *//* border-bottom: 1rpx solid #fff; */
}

.wechat-emoji image {
  width: 60rpx;
  height: 60rpx;
  position: relative;
  top: 5rpx;
}

.time {
  text-align: center;
  position: relative;
  top: 10rpx;
}

.time text {
  font-size: 26rpx;
  display: inline-block;
  border-radius: 8rpx;
  color: #fff;
  background-color: #ccc;
  padding: 0 10rpx;
}

.bottom_ {
  height: 120rpx;
}

.liantian_face {
  position: relative;
  top: 10rpx;
}
